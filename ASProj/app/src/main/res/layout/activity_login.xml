<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background"
    android:orientation="vertical">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:background="@color/color_white">

        <com.example.hiui.icont.IconFontTextView
            android:id="@+id/action_back"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/if_back"
            android:textSize="@dimen/sp_24"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/title_login"
            android:textColor="@color/color_000"
            android:textSize="@dimen/sp_16" />
        <TextView
            android:id="@+id/title_register"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/title_register"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/color_298"
            android:padding="10dp"
            android:layout_marginEnd="6dp"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_d1d2"/>
    <com.example.hiui.input.InputItemLayout
        android:id="@+id/input_item_username"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/color_white"
        android:paddingLeft="@dimen/sp_16"

        app:hint="@string/input_item_hint_username"
        app:inputTextAppearance="@style/inputTextAppearance"
        app:title="@string/input_item_title_username"
        app:titleTextAppearance="@style/titleTextAppearance"
        app:topLineAppearance="@style/lineAppearance"
        app:bottomLineAppearance="@style/lineAppearance"/>

    <com.example.hiui.input.InputItemLayout
        android:id="@+id/input_item_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_marginTop="@dimen/dp_10"
        android:paddingLeft="@dimen/sp_16"
        android:background="@color/color_white"
        app:bottomLineAppearance="@style/lineAppearance"
        app:hint="@string/input_item_pwd"
        app:inputTextAppearance="@style/inputTextAppearance"
        app:inputType="password"
        app:title="@string/input_title_pwd"
        app:titleTextAppearance="@style/titleTextAppearance"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/action_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_58dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:text="@string/title_login"
        android:textColor="@color/color_white"
        android:textSize="@dimen/sp_16"
        app:backgroundTint="@color/color_dd2"
        app:cornerRadius="6dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_6"
        android:text="@string/login_desc_forget_pwd"
        android:textColor="@color/color_646"
        android:textSize="12sp"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/action_thread"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_58dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:text="action_thread"
        android:textColor="@color/color_white"
        android:textSize="@dimen/sp_16"
        app:backgroundTint="@color/color_dd2"
        app:cornerRadius="6dp"/>
</LinearLayout>